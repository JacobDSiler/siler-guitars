
<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="jumbotron" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<h1>Add a New Featured Date:</h1>
<div class="jumbotron bg-info">
  <form id="date-form" action="/new-date" method="post">
    <label>New Featured Date</label>
    <div class="">
      <div>
        <input id="datepicker" type="text">
        <script>
          var datepicker = new ej.calendars.DatePicker({ width: "255px" });
          datepicker.appendTo('#datepicker');
        </script>
      </div>
      <label>Title *</label>
      <input id="dateTitle" class="form-control" type="text" name="dateTitle" required>
      <label>Content *</label>
      <textarea  id="dateBody" class="form-control" name="dateBody" rows="5" cols="30" required></textarea>
      <label>Include a Link Destination for this Featured Date</label>
      <br>
      <input class="form-control" type="url" name="linkUrl" placeholder="https://example.com" default="https://example.com">
      <label>Pick a Feature Image *</label>
      <!-- The image selection logic -->
      <div id="image-area">
        <% images.forEach((image) => { %>
          <a href="#"><img style="height: 100px;  border: 1px solid black; padding:1px;" src="<%= image.url %>"></a>
          <% }) %>
        </div>
      </div>
      <input id="chosenImage" name="imageSelected" type="hidden" value="noImage">
      <br>
      <input id="imageSubmit" class='btn btn-primary' type='submit' name='button'>

    </form>
  </div>


<%- include("partials/footer"); -%>
